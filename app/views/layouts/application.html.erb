<!DOCTYPE html>
<html>
<head>
  <title>Giveaway</title>
  <%= render 'layouts/stylesheets' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div class="container">
	<%= render 'layouts/header'%>
    <section class="round">
		<% flash.each do |key, value| %>
        <%= content_tag(:div, value, :class => "flash #{key}") %>
      <% end %>
      <%= yield %>
    </section>
	<%= render 'layouts/footer'%>

</div>
</body>
</html>
