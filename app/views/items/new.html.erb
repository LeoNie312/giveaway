<%= render 'shared/error_messages', :object => @item %>

<div id="item-categories-block">
	<%= render 'categories_hierarchy', :hierarchy => @hierarchy %>
</div>	

<div id="category-name-singleton">
	I have <%= text_field_tag "category_name", nil, :form => 'new_item' %>
</div>	

<%= form_for @item do |f| %>

	<%= f.hidden_field :category_id %><br/>
	
	<%= f.label :description, "Description" %><br/>
	<%= f.text_area :description, rows: 2, cols: 30 %><br/>
	
	<%= f.label :img_link, "Image_url" %><br/>
	<%= f.text_area :img_link, rows: 2, cols: 40 %><br/>
	
	<%= f.submit "Confirm" %>
<% end %>